<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OE-NIK DAMA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>

    <div>
        <div class="container">
            @*<div class="sidenav">
            </div>*@
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        @Html.ActionLink("Main Site", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" });
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("List users", "ListUsersAsync", "Account", new { area = "" }, new { @class = "navbar-brand" });
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand" });
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Calendar", "Index", "Calendar", new { area = "" }, new { @class = "navbar-brand" });
                    </li>
                        @Html.Partial("_LoginPartial");
                </ul>
            </nav>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Created by Balazs Toth</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>